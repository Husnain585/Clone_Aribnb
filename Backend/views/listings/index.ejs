<%= layout("/layouts/boilerplate") %>

<body>
  <!-- Header -->
  <header class="bg-primary text-white text-center py-3">
    üåç WanderLust - Explore All Listings
  </header>

  <div class="container my-4">
    <!-- Create New Listing -->
    <form action="/listing/new" method="get" class="mb-4">
      <button class="btn btn-primary">+ Create New Listing</button>
    </form>

    <!-- Listings Grid -->
    <div class="row g-4">
      <% for(let listing of allListings) { %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm listing-card">
          <!-- Image -->
          <img
            src="<%= listing.image %>"
            class="card-img-top"
            alt="<%= listing.title %>" 
          />

          <!-- Card Body -->
          <div class="card-body">
            <h5 class="card-title mb-1">
              <a
                href="/listings/<%= listing._id %>"
                class="stretched-link text-decoration-none text-dark"
              >
                <%= listing.title %>
              </a>
            </h5>
            <p class="card-text text-muted mb-1">
              <%= listing.location %>, <%= listing.country %>
            </p>
            <p class="fw-bold">
              ‚Çπ <%= listing.price.toLocaleString("en-IN") %> / night
            </p>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>

  <!-- Custom CSS -->
  <style>
    .listing-card {
      border-radius: 12px;
      overflow: hidden;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .listing-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.15);
    }
    .listing-card img {
      height: 200px;
      object-fit: cover;
      transition: transform 0.3s ease;
    }
    .listing-card:hover img {
      transform: scale(1.05);
    }
  </style>
</body>
